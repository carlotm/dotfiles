{
  "packages": [
    "glibcLocales@latest",
    "ansible",
    "incus@latest"
  ],
  "env": {
    "ANSIBLE": "ansible-playbook --inventory inventory --ask-become-pass",
    "SYS":     "plays/sys.yml",
    "DOTS":    "plays/dots.yml"
  },
  "shell": {
    "scripts": {
      "archlinux": [
        "incus admin init --auto",
        "systemctl start incus",
        "incus admin waitready",
        "incus launch archlinux/cloud --vm archbox"
      ],
      "scumm":  "$ANSIBLE -e hostname=scumm $SYS",
      "monkey": "$ANSIBLE -e hostname=monkey $SYS",
      "dots":   "$ANSIBLE $DOTS"
    }
  }
}
