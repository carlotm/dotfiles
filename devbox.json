{
  "packages": [
    "glibcLocales@latest",
    "ansible",
    "incus@latest"
  ],
  "env": {
    "HOST": "archbox",
    "ANSIBLE": "ansible-playbook --inventory inventory --ask-become-pass",
    "SYS":     "plays/sys.yml",
    "DOTS":    "plays/dots.yml"
  },
  "shell": {
    "scripts": {
      "arrange": [
        "incus launch images:archlinux $HOST",
        "incus exec $HOST -- uname -a",
        "incus delete $HOST --force"
      ],
      "scumm":  "$ANSIBLE -e hostname=scumm $SYS",
      "monkey": "$ANSIBLE -e hostname=monkey $SYS",
      "dots":   "$ANSIBLE $DOTS"
    }
  }
}
