alt + shift + Return
	xfce4-terminal

alt + F2
	xfce4-appfinder

alt + Escape
	pkill -USR1 -x sxhkd

alt + shift + r
	bspc wm -r

alt + shift + c
	bspc node -c

alt + @space
	bspc desktop -l next

alt + Return
	bspc node -s biggest.window

alt + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

alt + {j,k}
	bspc node -f {next,prev}.local.!hidden.window

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

alt + {h,l}
	bspc node -z {right -20 0,right 20 0}
