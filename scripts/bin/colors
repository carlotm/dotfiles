#!/usr/bin/env bash

if test -t 1; then
    ncolors=$(tput colors)

    if test -n "$ncolors" && test $ncolors -ge 8; then
        bold="$(tput bold)"
        underline="$(tput smul)"
        standout="$(tput smso)"
        normal="$(tput sgr0)"
        bla="$(tput setaf 0)"
        red="$(tput setaf 1)"
        gre="$(tput setaf 2)"
        yel="$(tput setaf 3)"
        blu="$(tput setaf 4)"
        mag="$(tput setaf 5)"
        cya="$(tput setaf 6)"
        whi="$(tput setaf 7)"
    fi
fi

echo "${bla}black text .. ■ ${bold}bright version ■${normal}"
echo "${red}red text .... ■ ${bold}bright version ■${normal}"
echo "${gre}green text .. ■ ${bold}bright version ■${normal}"
echo "${yel}yellow text . ■ ${bold}bright version ■${normal}"
echo "${blu}blue text ... ■ ${bold}bright version ■${normal}"
echo "${mag}magenta text  ■ ${bold}bright version ■${normal}"
echo "${cya}cyan text ... ■ ${bold}bright version ■${normal}"
echo "${whi}white text .. ■ ${bold}bright version ■${normal}"
