[user]
    name = Ascani Carlo
    email = carlotm@pm.me
	signingkey = B65D77CA6B16E83D
[alias]
    co = checkout
    s = status
    d = diff
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[color]
    branch = auto
    diff = auto
    status = auto
	ui = true
[color "branch"]
    current = green reverse
    local = green
    remote = yellow
[color "diff"]
	meta = 11
	frag = magenta bold
	old = red bold
	new = green bold
	func = 146 bold
	whitespace = red reverse
[color "status"]
	added = cyan
    changed = green
    untracked = yellow
[delta]
    navigate = true
    light = false
[merge]
    conflictstyle = diff3
[difftool]
    prompt = false
[http]
    postBuffer = 524288000
[credential]
    helper = cache --timeout=10800
[pull]
    rebase = true
[cola]
	startupmode = folder
	spellcheck = false
[init]
	defaultBranch = main
[core]
	pager = delta
[interactive]
    diffFilter = delta --color-only
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[diff]
    colorMoved = default
